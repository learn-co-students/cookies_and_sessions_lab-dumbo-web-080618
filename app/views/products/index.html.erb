<ul>
  <% if @cart == nil%>
    Yoh the cart has nothing
  <% else %>
    <% @cart.each do |product| %>
      <li><%= product %></li>
    <% end %>
  <% end %>
</ul>

<%= form_tag ({controller: 'products',
    action: 'add',
    method: 'post'}) do %>

  <input name=product>
  <input type=submit value='add to cart'>
<% end %>
